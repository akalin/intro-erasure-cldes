{
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },
  "rules": {
    "strict": ["error", "global"],
    "comma-dangle": ["error", {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "imports": "always-multiline",
      "exports": "always-multiline",
      // Disallow dangling commas in function declarations/calls,
      // since Edge doesn't support it.
      "functions": "never"
    }]
  }
}
